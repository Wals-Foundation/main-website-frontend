{
  "compilerOptions": {
    "target": "ES2020", // More modern target
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false, // Use only if you have .js files you want to compile
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler", // Fine for Next.js with App Router
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "forceConsistentCasingInFileNames": true, // Good practice
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"] // Fixed path alias format
    },
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["svgr.d.ts","next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
